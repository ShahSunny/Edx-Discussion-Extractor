{
  "manifest_version": 2,

  "name": "One-click Kittens",
  "description": "This extension demonstrates a 'browser action' with kittens.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background" : {
      "page": "popup.html"
  },
  "permissions": [
    "cookies",
    "background",
    "https://*.edx.org/",
    "http://localhost:8080/",
    "http://localhost/"
  ]
}